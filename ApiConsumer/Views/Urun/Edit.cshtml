@model Urun
@{
    Layout = "_Layout"; 
    ViewData["Title"] = "Ürün Düzenle"; 
}

<div class="container mt-5">
    <h1>Ürün Düzenle</h1>
    <form asp-action="Edit" method="post">
        <input type="hidden" name="urunId" value="@Model.Id" />

        <div class="form-group">
            <label for="Isim">İsim</label>
            <input type="text" class="form-control" id="Isim" name="Isim" value="@Model.Isim" required />

            <label for="KategoriId">Kategori Id</label>
            <input type="number" class="form-control" name="KategoriId" value="@Model.KategoriId" required />
        </div>

        <button type="submit" class="btn btn-success">Güncelle</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Geri</a>
    </form>
</div>
