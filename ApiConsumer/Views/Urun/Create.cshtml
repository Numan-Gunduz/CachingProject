@model Urun
@{
    Layout = "_Layout"; 
    ViewData["Title"] = "Yeni Ürün Ekle";
}
<p>
    @if (ViewData["Sure"] != null)
    {
        <text>Veri çekme süresi: @ViewData["Sure"] ms</text>
    }
    else
    {
        <text>Veri çekme süresi bulunamadı.</text>
    }
</p>

<form asp-action="Create" method="post">
    <h1>Yeni Ürün Ekle</h1>
    <div class="form-group">
        <label for="Isim">İsim</label>
        <input type="text" class="form-control" id="Isim" name="Isim" required />

        <label for="KategoriId">Kategori Id</label>
        <input type="number" class="form-control" name="KategoriId" required />
    </div>

    <button type="submit" class="btn btn-success">Ekle</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Geri</a>
</form>
