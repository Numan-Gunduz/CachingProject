@model Urun
@{
    Layout = "_Layout"; 
    ViewData["Title"] = "Ürün Sil"; 
}

<div class="text-center">
    <h1>Ürünü Sil</h1>
    <h4>@Model.Isim</h4>
    <p>Bu ürünü silmek istediğinizden emin misiniz?</p>

    <form asp-action="DeleteConfirmed" method="post">
      
        <input type="hidden" asp-for="Id" /> 
        <button type="submit" class="btn btn-danger">Sil</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Geri</a>
    </form>
    <p>
        @if (ViewData["Sure"] != null)
        {
            <text>Veri çekme süresi: @ViewData["Sure"] ms</text>
        }
        else
        {
            <text>Veri çekme süresi bulunamadı.</text>
        }
    </p>

</div>
    