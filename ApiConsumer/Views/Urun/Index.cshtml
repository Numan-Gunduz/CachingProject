
@model List<Urun>

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Ürün Listesi";
    var searchQuery = HttpContextAccessor.HttpContext?.Request.Query["searchQuery"].ToString(); 
}
<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Yeni Ürün Ekle</a>

<div class="container mt-4">
    <h2>Ürün Listesi</h2>

    <!-- Arama formu -->
    <form method="get" asp-action="Index" class="form-inline mb-3">
        <input type="text" name="searchQuery" value="@searchQuery" class="form-control mr-sm-2" placeholder="Ürün adı ara" />
        <button type="submit" class="btn btn-primary">Ara</button>
    </form>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>        
                <th>ID</th>
                <th>İsim</th>
                <th>Kategori</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urun in Model)
            {
                <tr>
                    <td>@urun.Id</td>
                    <td>@urun.Isim</td>
                    <td>@urun.KategoriId</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = urun.Id })" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="@Url.Action("UrunSıl", new { id = urun.Id })" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Veri çekme süresi -->
    <div class="alert alert-info">
        Veri çekme süresi: @ViewData["Sure"] ms
    </div>
</div>
